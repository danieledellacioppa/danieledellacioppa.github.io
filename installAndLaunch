#!/bin/bash

# Configura variabili
APK_PATH="/data/data/com.termux/files/home/com.akhter.aosplauncher.apk"
DEVICE_IP="$1"
PACKAGE_NAME="com.akhter.aosplauncher"
MAIN_ACTIVITY="com.akhter.aosplauncher.NeoLauncher"

# Controlla se l'IP √® stato passato come argomento
if [ -z "$DEVICE_IP" ]; then
    echo "Usage: $0 <device_ip>"
    exit 1
fi

# Connessione ADB al dispositivo
echo "üîó Connettendo ADB al dispositivo $DEVICE_IP..."
adb connect "$DEVICE_IP"

# Installa l'APK
echo "üì¶ Installando l'APK sul dispositivo..."
adb -s "$DEVICE_IP" install -r "$APK_PATH"

# Controlla se l'installazione √® avvenuta con successo
if [ $? -eq 0 ]; then
    echo "‚úÖ APK installato con successo!"
    
    # Avvia il launcher installato
    echo "üöÄ Avviando il launcher..."
    adb -s "$DEVICE_IP" shell am start -n "$PACKAGE_NAME/$MAIN_ACTIVITY"

    echo "‚úÖ Launcher avviato correttamente!"
else
    echo "‚ùå Errore durante l'installazione dell'APK!"
    exit 1
fi

